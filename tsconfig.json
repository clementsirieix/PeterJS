{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es5",
        "outDir": "./dist",
        "baseUrl": "./src",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": false,
        "lib": ["es5", "dom", "es2015.promise"],
        "declaration": false
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}